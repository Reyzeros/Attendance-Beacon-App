<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUser" >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="64dp"
        android:text="User E-mail:" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:text="User Password:" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewGroupNameUser"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="25dp"
        android:text="Add User:" />

    <TextView
        android:id="@+id/textViewGroupNameUser"
        android:layout_width="108dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="27dp"
        android:text="Brak"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewGroupNameUser"
        android:layout_marginStart="26dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/textView7"
        android:ems="10"
        android:hint="Name and Surname"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:text="User Name and Surname:" />

    <Button
        android:id="@+id/buttonAddUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextUserPassword"
        android:layout_marginStart="80dp"
        android:layout_marginTop="79dp"
        android:layout_toEndOf="@+id/textView7"
        android:onClick="onAddUserClicked"
        android:text="Add" />

    <ListView
        android:id="@+id/listViewUsers"
        android:layout_width="369dp"
        android:layout_height="350dp"
        android:layout_below="@+id/buttonAddUser"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="62dp" />

    <EditText
        android:id="@+id/editTextUserPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextUserEmail"
        android:layout_marginStart="63dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textView4"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTextUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextUserName"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/textView4"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="54dp"
        android:visibility="invisible" />
</RelativeLayout>
