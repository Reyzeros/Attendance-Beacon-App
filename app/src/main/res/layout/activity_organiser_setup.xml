<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrganiserSetup" >

    <TextView
        android:id="@+id/textViewSetupOrganiserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="156dp"
        android:layout_marginTop="8dp"
        android:text="Organiser" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSetupOrganiserName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:text="Choose Group:" />

    <ListView
        android:id="@+id/ListViewGroupsOrganiserSetup"
        android:layout_width="368dp"
        android:layout_height="117dp"
        android:layout_below="@+id/textView14"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSetupOrganiserName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="187dp"
        android:text="Add or choose date:" />

    <EditText
        android:id="@+id/editTextDateOrganiserSetup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="datetime" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSetupOrganiserName"
        android:layout_marginStart="71dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/textView12"
        android:text="Your choice:" />

    <TextView
        android:id="@+id/textViewGroupChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSetupOrganiserName"
        android:layout_marginStart="22dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/textView14"
        android:text="empty" />

    <ListView
        android:id="@+id/ListViewDate"
        android:layout_width="366dp"
        android:layout_height="131dp"
        android:layout_below="@+id/editTextDateOrganiserSetup"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="13dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_marginStart="34dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/editTextDateOrganiserSetup"
        android:text="Add" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ListViewDate"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="15dp"
        android:text="Start Attendance Check" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="14dp"
        android:text="Stop Attendance Check" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="6dp"
        android:text="See Results" />
</RelativeLayout>
