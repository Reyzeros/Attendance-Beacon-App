<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".OrganiserSetup">

    <TextView
        android:id="@+id/textViewSetupOrganiserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="10dp"
        android:text="Organiser"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFEB3B" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSetupOrganiserName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Choose Group:"
        android:textColor="#FFEB3B" />

    <ListView
        android:id="@+id/listViewGroupsOrganiserSetup"
        android:layout_width="368dp"
        android:layout_height="117dp"
        android:layout_below="@+id/textView14"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSetupOrganiserName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="187dp"
        android:text="Add or choose date:"
        android:textColor="#FFEB3B" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSetupOrganiserName"
        android:layout_marginStart="71dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/textView12"
        android:text="Your choice:"
        android:textColor="#FFEB3B" />

    <TextView
        android:id="@+id/textViewGroupChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSetupOrganiserName"
        android:layout_marginStart="22dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/textView14"
        android:text="empty"
        android:textColor="#FFEB3B" />

    <ListView
        android:id="@+id/ListViewDate"
        android:layout_width="366dp"
        android:layout_height="131dp"
        android:layout_below="@+id/buttonAddDate"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp" />

    <Button
        android:id="@+id/buttonAddDate"
        android:layout_width="237dp"
        android:layout_height="61dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        android:background="#181E43"
        android:onClick="onAddDateClicked"
        android:text="Create Attendance check with current date"
        android:textColor="#FFEB3B" />

    <Button
        android:id="@+id/buttonStartAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ListViewDate"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:background="#181E43"
        android:onClick="onButtonStartAttendanceClicked"
        android:padding="10dp"
        android:text="Start Attendance Check"
        android:textColor="#FFEB3B" />

    <Button
        android:id="@+id/buttonStopAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStartAttendance"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="#181E43"
        android:onClick="onButtonStopAttendanceClicked"
        android:padding="10dp"
        android:text="Stop Attendance Check"
        android:textColor="#FFEB3B" />

    <Button
        android:id="@+id/buttonResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStartAttendance"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/buttonStopAttendance"
        android:background="#181E43"
        android:onClick="onButtonResultsClicked"
        android:padding="10dp"
        android:text="See Results"
        android:textColor="#FFEB3B" />

    <TextView
        android:id="@+id/textViewDateShown"
        android:layout_width="144dp"
        android:layout_height="31dp"
        android:layout_below="@+id/ListViewDate"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/buttonStartAttendance"
        android:textColor="#FFEB3B" />
</RelativeLayout>
